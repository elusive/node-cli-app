{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "settings": {
        "import/resolver": {
          "node": true
        }
    },
    "rules": {
        "indent": ["warn", 4],
        "eol-last": ["error", "never"]
    }
}
